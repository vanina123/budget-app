      <%= link_to "/categories" do %>
        <i class="fa-solid fa-arrow-left"></i>
      <% end %>
    </div>

    <h1>Expenditure</h1>
  </section>

 <div class= "display">
   <% @expenditures.each do |expenditure| %>
     <div class ="category">
        <div class= "display-title">
