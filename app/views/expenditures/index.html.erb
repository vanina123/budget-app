          <small><%= expenditure.created_at.strftime('%d-%b-%Y') %> </small>
        </div>

        <div class = "dis-p">
          <p> $<%= expenditure.amount %> </p>
      
        </div>
      </div>
   
    <% end %>
    <div class="display-p">
      <p>
        Total amount: $<%= @total_amount %>
      </p>
    </div>

  </div>
  <div class="new">
    <button> <a href="/categories/<%= @category.id %>/expenditures/new">Add a new expenditure</a> </button>
