<h1>Add a new Expenditure</h1>

<%= form_for(@expenditure, url: "/categories/#{@category.id}/expenditures") do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :amount %>
    <%= f.number_field :amount %>
  </div>

  <div class="form-check">
  <%= f.check_box :categories, { multiple: true } %>
  <%= f.label :categories, 'Categories', class: 'form-check-label' %>
  <% @categories.each do |category| %>
    <div class="form-check">
      <%= f.check_box :category_ids, { multiple: true }, category.id, nil %>
      <%= f.label :category_ids, category.name, class: 'form-check-label' %>
    </div>
  <% end %>
  </div>
  
  <div>
    <%= f.submit "Save" %>
  </div>
<% end %>
<a href="/categories/<%= @category.id %>/expenditures">Back</a>